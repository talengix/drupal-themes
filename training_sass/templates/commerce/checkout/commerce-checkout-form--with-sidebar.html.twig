{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form">
  <div class="row">
    <div class="col-12 col-lg-7 checkout-center-wrapper">
      {{ form|without('sidebar', 'actions') }}
    </div>
    <div class="col-12 col-lg-5 order-first order-lg-last checkout-sidebar-wrapper">
      <div class="checkout-sidebar-order-summary-wrapper"><h3>{% trans %} Order Summary {% endtrans %}</h3>
      {{ form.sidebar }}</div>
    </div>
  </div>
  <div class="layout-region-checkout-footer">
    {{ form.actions }}
  </div>
</div>
