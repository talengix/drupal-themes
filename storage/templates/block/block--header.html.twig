{#
/**
* @file
* Template for a block.
*/
#}

{% embed '@storage/block/block.twig' with {
  html_tag: 'div',
} %}

  {% block label %}
    <div{{ title_attributes.addClass(['block-title']) }}>{{ label }}</div>
  {% endblock %}

  {% block content %}
    <div{{ content_attributes.addClass('content') }}>
      <div class="header">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="text">
              <h1>{{ content.field_title[0] }}</h1>
              {% if content.field_card_text is not null %}
                {{ content.field_card_text[0] | raw }}
              {% endif %}
            </div>
          </div>
          <div class="col-md-6">
            <div class="icon">
              {{ content.field_image[0] }}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}
{% endembed %}