{{ attach_library('biu_base/large-hero') }}
<div {{ bem(component_base_class, component_modifiers, component_blockname, additional_classes) }}>
  <div class="swiper-wrapper">
    {% for item in items %}
      {% include "@molecules/media-item/media-item--hero.twig" with {
        "component_base_class": item.component_base_class,
        "component_modifiers": item.component_modifiers,
        "additional_classes": item.additional_classes,
        "is_title_h1": item.is_title_h1,
        "label": item.label,
        "sub_title": item.sub_title,
        "mobile_image": item.mobile_image,
        "media_content": item.media_content,
        "link_title": item.link_title,
        "link_url": item.link_url,
        "media_type": item.media_type,
      } %}
    {% endfor %}
  </div>

  <div class="large-hero-control">
    <div class="circle__box">
      <div class="circle__wrapper circle__wrapper--right">
        <div class="circle__whole circle__right"></div>
      </div>
      <div class="circle__wrapper circle__wrapper--left">
        <div class="circle__whole circle__left"></div>
      </div>
      <div class="play" tabindex="0">
        {% include "@atoms/images/icons/_icon.twig" with {
          icon_name: 'play',
          icon_url: "/themes/custom/biu_base/dist/icons.svg",
          icon_modifiers: []
        } %}
      </div>
      <div class="pause" tabindex="0">
        {% include "@atoms/images/icons/_icon.twig" with {
          icon_name: 'pause',
          icon_url: "/themes/custom/biu_base/dist/icons.svg",
          icon_modifiers: []
        } %}
      </div>
    </div>
  </div>
  {% include "@atoms/images/icons/_icon.twig" with {
    icon_name: 'scroll-down',
    icon_base_class: "scroll-down-link",
    icon_url: '/themes/custom/biu_base/dist/icons.svg',
    icon_modifiers: []
  } %}
  <!-- Add Pagination -->
  <div class="swiper-pagination"></div>
</div>

