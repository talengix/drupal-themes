<div class ="confirmation-msg">
  {% if crm_data == 'failed' %}
    <div class = "submission-failed-msg">{{ "Your Submission could not be sent"|t }}</div>
  {% else %}
    <div class="thankyou-form-sec">
      {% include "@atoms/images/icons/_icon.twig" with {
        icon_name: "group",
        icon_value: "group",
        icon_url: icon_url
      } %}
      <div class = "thankyou-msg">
          {{ "Thanks!"|t }} <br>
          {{ "Your request has been sent"|t }}
       </div>
      <div class= "contact-msg">{{ "We will contact you soon"|t }}</div>
    </div>
  {% endif %}
</div>
