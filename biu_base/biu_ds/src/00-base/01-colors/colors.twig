{% set colors_base_class = "sg-colors" %}
<ul {{ bem(colors_base_class) }}>
  {% for item in items %}
    <li {{ bem("list", [], colors_base_class) }}>
      <div {{ bem("color", '', colors_base_class) }} style="background-color: {{ item.color_hex }}"></div>
      <div {{ bem("sg-info") }} >
        <span>{{ item.name }}</span> <br/>
        <code>{{ item.color_hex }}</code>
      </div>
    </li>
  {% endfor %}
</ul>